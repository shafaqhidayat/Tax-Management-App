<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <!-- Add NuGet package dependencies needed for unit testing -->
  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
    <PackageReference Include="xunit" Version="2.4.2" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.5" />
  </ItemGroup>

  <!-- Reference the main application project (TaxManagementApp) -->
  <!-- This allows the test project to access its classes and services -->
  <ItemGroup>
    <ProjectReference Include="..\TaxManagementApp\TaxManagementApp.csproj" />
  </ItemGroup>

</Project>